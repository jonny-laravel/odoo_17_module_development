    <!-- Search & Filter -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="property_type_id"/> 
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <filter name="state" string="Available" domain="[('state','in',['new','over_received'])]" />
                <filter name="postcode" string="Post Code" context="{'group_by':'postcode'}"/>
            </search>
        </field>
    </record>
    <!-- view tree -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
           <tree>
                <field name="name" />
                <field name="property_type_id"/> 
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
                <field name="state"/> 
                <field name="active" groups="base.group_no_one"/> 

            </tree> 
        </field>
    </record>
    <!-- Form  -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string= "Estate Property">
            <header>
                <button name="action_sold" type="object" string="SOLD" icon="fa-check"/>
                <button name="action_cancel" type="object" string="CANCEL" icon="fa-times"/>
            </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/> </h1>
                    </div>
                    <group>
                        <field name="tag_ids" widget="many2many_tags" class="pb-3"/> 
                        <group>
                            
                            <field name="property_type_id"/> 
                            <field name="postcode"/> 
                            <field name="date_availability"/> 
                        </group>
                        <group>
                            <field name="expected_price"/> 
                            <field name="best_price"/> 
                            <field name="selling_price"/> 
                        </group>
                        <group>
                            <field name="state" groups="base.group_no_one"/> 
                            <field name="active" groups="base.group_no_one"/> 
                        </group>
                    </group>
                    <notebook>
                        <page string ="Description">
                            <group>
                                <field name="description"/> 
                                
                            </group>
                        </page>
                        <page string="Offer">                            
                            <field name="offer_ids"/> 
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id"/> 
                                <field name="buyer_id"/> 
                            </group>
                        </page>
                    </notebook>
                    <notebook>
                        <page string ="Specification">
                            <group>
                               
                                <field name="bedrooms"/> 
                                <field name="living_area"/> 
                                <field name="facades"/> 
                                <field name="garage"/> 
                                <field name="garden"/> 
                                <field name="garden_area"/> 
                                <field name="garden_orientation"/> 
                                <field name="total_area"/> 
                            </group>
                        </page>
                        
                    </notebook>
                </sheet>
            </form > 
        </field>
    </record>
